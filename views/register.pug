extends layout.pug
block contentBlock
    if errorMessage
        h2(class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative")=errorMessage
    form(action="/admin/register", method="post", class="w-full max-w-sm")
        div(class="my-8 text-lg")
            label(for="email")="Email"
            input(class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-teal-400", type="text", name="email")
        div(class="my-8 text-lg")
            label(for="username")="Username"
            input(class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-teal-400", type="text", name="username")
        div(class="my-8 text-lg")
            label(for="password")="Password"
            input(class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-teal-400", type="password", name="password")
        div(class="my-8 text-lg")
            label(for="age")="Age"
            input(class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-teal-400", type="number", name="age")
        - var questionCounter = 0
        - var radioName = "question" + questionCounter
        each question in questions
            div(class="my-8 text-lg")
                label(for="question1")=question.prompt
                br
                each choice in question.choices
                    - var radioValue = question.prompt + ":" + choice
                    div(class="m-6 ")
                        input(class="m-2", id=radioName, type="radio", name=radioName, value=radioValue)
                        label(for=radioName)=choice
                        br
                - questionCounter += 1
                - radioName = "question" + questionCounter 

        input(class="shadow bg-teal-400 hover:bg-teal-300 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded", type="submit", value="Complete Registration")